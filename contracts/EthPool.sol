contract EthPool {
    mapping(address => uint256) private deposits;
    mapping(address => uint256) private rewards;
    mapping(uint8 => address) private holders;

    uint8 totalHolder;

    address team;

    constructor() {
        team = msg.sender;
        totalHolder = 0;
    }

    function deposit() payable external {
        bool found = false;
        for (uint8 i = 0; i < totalHolder; i++) {
            if (holders[i] == msg.sender)
                found = true;
        }

        if (found) {
            deposits[msg.sender] = SafeMath.add(deposits[msg.sender], msg.value);
        } else {
            deposits[msg.sender] = msg.value;
            holders[totalHolder] = msg.sender;
            rewards[msg.sender] = 0;
            totalHolder++;
        }
    }

    function withdraw() external {
        if (deposits[msg.sender] > 0 || rewards[msg.sender] > 0) {
            uint256 amount = SafeMath.add(deposits[msg.sender], rewards[msg.sender]);
            bool sent = payable(msg.sender).send(amount);
            require(sent, "Failed to send Ether");
            deposits[msg.sender] = 0;
            rewards[msg.sender] = 0;
        }
    }

    function depositReward() external payable {
        require(team == msg.sender, "Only team can deposit rewards");
        uint256 amount = msg.value;
        uint256 total = 0;

        for (uint8 i = 0; i < totalHolder; i++) {
            total = SafeMath.add(total, deposits[holders[i]]);
        }

        if (total == 0)
            rewards[team] = amount;
        else {
            for (uint8 i = 0; i < totalHolder; i++) {
                address user = holders[i];
                uint256 rewardPerUser = SafeMath.div(SafeMath.mul(amount, deposits[user]), total);
                rewards[user] = SafeMath.add(rewards[user], rewardPerUser);
            }
        }
    }

    function getBalance(address user) public view returns (uint256) {
        return deposits[user];
    }

    function getRewards(address user) public view returns (uint256) {
        return rewards[user];
    }

    function getTeam() public view returns (address) {
        return team;
    }

    function getTotal() public view returns (uint256) {
        uint256 total = 0;

        for (uint8 i = 0; i < totalHolder; i++) {
            total = SafeMath.add(total, deposits[holders[i]]);
        }
        for (uint8 i = 0; i < totalHolder; i++) {
            total = SafeMath.add(total, rewards[holders[i]]);
        }

        return total;
    }
}